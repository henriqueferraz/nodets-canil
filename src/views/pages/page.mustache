{{>partials/reader}}

    {{#banner}}
        <section class="banner" style="background-image: url('/images/{{imagemFundo}}')">{{titulo}}</section>
        <h2>{{titulo}} disponíveis para adoção</h2>
    {{/banner}}

    <div class="container list">
        {{#list}}
            <div class="item">
                <img src="/images/{{image}}" class="item--image" />
                <div class="item--name">{{name}}</div>
                <div class="item--color">Cor: {{color}}</div>
                <div class="item--genre">Gênero: Masculino</div>
            </div>
        {{/list}}           
    </div>

    {{^list}}
        <div class="container no-list">
        <h2>Não há animais disponíveis nessas condições</h2>
        </div>
    {{/list}}

{{>partials/footer}}